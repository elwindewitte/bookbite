layout: layouts/base.njk
permalink: /account/
---
{%- set pageName = "Account" -%}
{%- include "navTop.njk" -%}

{%- set active = "Account" -%}
{%- include "navBottom.njk" -%}

<div class="on-page-gallery bookshelves">
    {%- set listContent = collections.bookshelf -%}
    {%- for bookshelf in listContent -%}
        <a class="bookshelf" href="{{ bookshelf.url | url }}">
            <div class="covers">
                {%- set listFilterShow = bookshelf.data.bookshelfTag -%}
                {%- set listContent = collections.book -%}
                {%- include "bookshelfCoverBooks.njk" -%}
            </div>
            <p>{{ bookshelf.data.name }}</p>
        </a>
        {%- endfor -%}
</div>